{
  "name": "ribbon-finance-contracts",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Smart contracts for Ribbon.finance",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@airswap/utils": "0.4.2",
    "@chainlink/contracts": "0.0.10",
    "@openzeppelin/contracts": "^3.2.0",
    "@openzeppelin/contracts-upgradeable": "^3.4.1",
    "@openzeppelin/upgrades": "^2.8.0",
    "axios": "^0.21.1",
    "moment-timezone": "^0.5.33",
    "truffle-contract-size": "^2.0.0",
    "truffle-plugin-verify": "^0.4.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/test-environment": "^0.1.5",
    "@openzeppelin/test-helpers": "^0.5.6",
    "@truffle/hdwallet-provider": "^1.1.0",
    "chai": "^4.2.0",
    "commander": "^6.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.0.31",
    "hardhat": "^2.0.10",
    "hardhat-log-remover": "^2.0.0",
    "husky": "^6.0.0",
    "mocha": "^8.1.3",
    "moment": "^2.29.1",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "sol-merger": "^3.1.0",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "truffle": "^5.1.47",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "verify-on-etherscan": "^1.2.1",
    "web3": "^1.3.1"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "verify": "npx truffle run verify RibbonFactory HegicAdapter GammaAdapter ProtocolAdapter AdminUpgradeabilityProxy RibbonVolatility RibbonThetaVault --network mainnet --license MIT",
    "merge-contracts": "sol-merger  --export-plugin SPDXLicenseRemovePlugin \"./contracts/**/*.sol\" ./build/merged",
    "export-artefacts": "node ./scripts/exportArtefacts.js",
    "upgrade-instrument": "node ./scripts/upgradeInstrument.js",
    "ganache": "ganache-cli --fork \"`node scripts/helpers/printTestURI.js`@`node scripts/helpers/getCurrentBlock.js`\" --forkCacheSize '-1'",
    "clean-logs": "yarn run hardhat remove-logs",
    "coverage": "npx hardhat coverage --testfiles 'test/**.js'",
    "lint:js": "eslint 'test/**/*.js' 'migrations/*.js' 'scripts/**/*.js'",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:sol": "solhint -f table contracts/**/*.sol",
    "lint:sol:prettier": "prettier --write \"contracts/**/*.sol\"",
    "lint:js:prettier": "prettier --write 'test/**/*.js' 'migrations/*.js' 'scripts/**/*.js'"
  }
}
